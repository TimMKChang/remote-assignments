<div class="container py-5 my-5">
  <div class="row">
    <div class="col-8 col-lg-6 col-xl-4 mx-auto text-center pb-3 border border-dark rounded">

      <h2 class="mt-3 mb-5">Sign In</h2>

      {{#if errorMsg}}
      <p class="alert alert-danger">
        {{errorMsg}}
      </p>
      {{/if}}

      <form action="/login" method="POST">
        <div class="form-group">
          <input type="email" class="form-control border-dark" id="email" name="email" aria-describedby="emailHelp"
            placeholder="Email">
        </div>
        <div class="form-group">
          <input type="password" class="form-control border-dark" id="password" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-outline-dark">Sign In</button>
      </form>

      <p class="lead mt-4">Don't Have An Account? <a href="/register">Sign Up</a></p>

    </div>
  </div>
</div>